  id           String     @id() @default(cuid())
  title        String
  url          String
  description  String?
  tags         String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt()
  collectionId String
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
}
